<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
		<% @books.each do |book| %>
	<tr><th><%= book.title %></th>
	    <th><%= book.body %></th>
	<th><%= link_to "Show", "/books/#{book.id}" %></th>
    <th><%= link_to "Edit","/books/#{book.id}/edit" %></th>
    <th><%= link_to "Destroy","/books/#{book.id}/destroy",{method:"post"} %></th>
　　</tr>
　　　　　<% end %>
	</thead>
</table>

<h2>New book</h2>
<%= form_for @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book'%>
<% end %>

